@import url('https://fonts.googleapis.com/css?family=Shojumaru')
@import url('https://fonts.googleapis.com/css?family=Delius')
@import url('https://fonts.googleapis.com/css?family=Neucha');
    
fontHeadings = 'Shojumaru', cursive
fontContent = 'Delius', cursive
fontChart = 'Neucha', cursive


/*BODY AND GLOBAL STYLES*/
body
    overflow-x hidden
    margin 0
    text-align center
    font-family fontContent
    text-shadow 3px 3px 2px black
    color white

#scroller
    overflow-y scroll
    width 100vw
    height 100vh

a
    text-decoration none
    color white

.pageStatus
    font 2em fontHeadings

#bgImage
    margin 0
    z-index -1
    position absolute
    height 100vh
    top 0
    left 0
    transition all 120s linear

.notransition
    transition none !important

#bgFilter
    box-shadow 0 0 120px 120px rgba(0, 17, 37, 0.2)
    background-color rgba(0, 17, 37, 0.2)
    width 650px
    min-width 350px
    margin 0 auto
    padding 0 3em 0 3em
    border-radius 60px
    min-height 100vh
/*END BODY AND GLOBAL*/



/*HEADER TEXT*/
#headerText
    font-family fontHeadings

.headerTextSml,
.headerTextLg
    display inline-block
    vertical-align middle
    margin-left -0.1em

.headerTextSml
    font-size 2.4em

.headerTextLg
    font-size 3.7em
/*END HEADER TEXT*/



/*NAV LINKS*/
.navLink
    display inline-block
    margin 0
    font-family fontHeadings
    font-size 1.5em
    padding 0.2em
    &:hover
        background-color rgba(251, 201, 1, 0.15)
    
.navLinkHolder
    display inline-block
    width 11.5em
    margin 0 -0.4em 0 0

#navContainer
    margin 0.5em auto 1em auto
/*END NAV STUFF*/


/*ABOUT PAGE*/
.contentHolder
    margin 0 auto 2em auto
    text-align justify

.pContent
    margin 1em 0
    font-size 1.3em
    line-height 1.3

.pContent:last-child
    margin 1em 0 0 0

#smallCap
    font-family fontHeadings
    font-size 0.8em
    position relative

#midX
    display inline-block
    font-size 1.6em
    vertical-align -15%
    line-height 0.8

.contentLink
    border-bottom 2px solid #fbc901
    &:hover
        background-color rgba(251, 201, 1, 0.15)

/*END ABOUT PAGE*/


/*UPLOAD PAGE*/
#hiddenFileUpload
    width 0px
    height 0px
    overflow hidden

#uploadBtnHolder
    width 180px
    height 180px
    margin 1em auto 0 auto
    border 5px solid #fbc901
    border-radius 90px
    cursor pointer
    /*    prevent selection when clicking*/
    -moz-user-select none
    -ms-user-select none
    -khtml-user-select none
    -webkit-user-select none
    -webkit-touch-callout none
    &:hover
        background-color rgba(251, 201, 1, 0.1)
        
//#uploadBtnHolder:hover

#uploadText
    position relative
    top 50%
    left 50%
    transform translate(-50%, -40%)
    font 1.8em fontHeadings

#codeBlock
    font 1.3em monospace
    text-align left
    line-height 1.1
    position relative
    left 50%
    transform translateX(-50%)
    display inline-block
    margin 0
    padding 0.5em 0.5em 0.5em 0.7em
    border-radius 20px
    background-color rgba(20, 20, 20, 0.15)
    box-shadow 0 0 20px 20px rgba(30, 30, 30, 0.15)
    min-width 350px    

.codeTag
    color #fbe996

.codeAttr
    color #f4b74c

.indent
    position relative
    left 2em
/*END UPLOAD*/



/*GALLERY PAGE*/
#viewTrackDescript
    font 1.3em fontHeadings
    margin 1.1em 0

.galTrackDescript
    font 1.2em fontHeadings
//    font-size 1.3em

.galleryImg
    width 300px

.galleryImgContainer
    display inline-block
    border 2px solid white
    border-radius 20px
    margin 8px
    background-color rgba(80, 80, 80, 0.15)
    &:hover
        border 2px solid #fbc901
        background-color rgba(40, 40, 40, 0.3)
        

//.galleryImgContainer:hover


#galleryImgHolder
    margin 0 auto
    width 100%
/*END GALLERY PAGE*/



/*D3 CHART STUFF*/
#charts
    margin 0 auto

svg
    display block
    margin 1.5em auto 0 auto

.axis path, .axis line
    fill none
    stroke white
    shape-rendering crispEdges

.axis text
    font 1.2em fontChart
    fill white

.chartDescription, #markerText
    font 1.4em fontChart
    fill white

#pngoutput
    display none
/*END D3 CHART STUFF*/


/*MEDIA QUERIES*/
@media screen and (max-width: 1200px)
    .axis text
        font 1em fontChart
        fill white

    .chartDescription, #markerText
        font 1.2em fontChart
        fill white
    
    #bgFilter
        width 500px
    
    #codeBlock
        font 1.15em monospace
    
    .navLink
        font-size 1.4em
    
    .navLinkHolder
        width 10em
    
    #uploadBtnHolder
        width 150px
        height 150px
        border 4px solid #fbc901
        border-radius 75px
    
    #uploadText
        font 1.5em fontHeadings

    svg
        margin 2.5em auto 0 auto

@media screen and (max-width: 600px)
    .axis text
        font 0.7em fontChart
        fill white

    .chartDescription, #markerText
        font 1em fontChart
        fill white
    
    #bgFilter
        width 95%
        padding 0
    
    #codeBlock
        font 1em monospace
    
    .navLinkHolder
        display block
        margin 0.5em auto
    
    .pContent
        font-size 1.2em
        line-height 1.2
/*END MEDIA QUERIES*/